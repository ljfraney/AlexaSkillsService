@{
    ViewBag.Title = "Enter Serial Number";
    Layout = "~/Views/Shared/_DontBlowUp.cshtml";
}

<div id="keypad">
    <h1>Serial Number</h1>
    <div>
        <input type="text"/>
    </div>
    <div>
        <button type="button">7</button>
        <button type="button">8</button>
        <button type="button">9</button>
    </div>
    <div>
        <button type="button">4</button>
        <button type="button">5</button>
        <button type="button">6</button>
    </div>
    <div>
        <button type="button">1</button>
        <button type="button">2</button>
        <button type="button">3</button>
    </div>
    <div>
        <button type="button" style="background-color: #d74040" title="Erase"><i class="glyphicon glyphicon-remove"></i></button>
        <button type="button">0</button>
        <button type="button" style="background-color: #1b9c41" title="Submit"><i class="glyphicon glyphicon-ok"></i></button>
    </div>
</div>

@section styles {
    <style type="text/css">
        #keypad {
            width: 257px;
            margin-left: auto;
            margin-right: auto;
        }

        #keypad button {
            width: 75px;
            height: 75px;
            margin: 4px;
            -webkit-border-radius: 99px;
            -moz-border-radius: 99px;
            border-radius: 99px;
            border: 2px solid #838383;
            background-color: #2d5887;
            -webkit-box-shadow: #B3B3B3 5px 5px 5px;
            -moz-box-shadow: #B3B3B3 5px 5px 5px;
            box-shadow: #B3B3B3 5px 5px 5px;
            color: #ffffff;
            font-size: 2em;
        }

        #keypad input { 
            width: 245px;
            height: 50px;
            margin-left: 4px;
            margin-right: 4px;
            margin-bottom: 10px;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            border-radius: 10px;
            border: 1px solid #838383;
            background-color: #e7e7e7;
            -webkit-box-shadow: #B3B3B3 5px 5px 5px;
            -moz-box-shadow: #B3B3B3 5px 5px 5px;
            box-shadow: #B3B3B3 5px 5px 5px;
            color: #4a4a4a;
            font-size: 1.5em;
            font-family: Courier New;
            text-align: center;
        }
    </style>
}